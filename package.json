		"gulp-concat": "^2.6.1",
		"gulp-env": "^0.4.0",
		"gulp-eslint": "^6.0.0",
		"gulp-rollup-lightweight": "^1.0.10",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-stylus": "^2.7.0",
		"inquirer": "^7.0.1",
		"npm-run-all": "^4.1.5",
		"open": "^7.0.0",
		"ora": "^4.0.3",
		"rollup": "^1.27.14",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-svelte": "^5.1.1",
