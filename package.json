{
	"name": "perfect-home",
	"description": "Firefox new tab replacement",
	"version": "0.13.7",
	"author": "Tom",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/perfect-things/perfect-home"
	},
	"scripts": {
		"ext:start": "web-ext run --no-reload -s ./dist -p test-profile --keep-profile-changes",
		"ext:lint": "web-ext lint -s ./dist",
		"ext:build": "web-ext build --overwrite-dest -s ./dist",
		"src:start": "gulp",
		"dist": "gulp build --prod",
		"build": "gulp build",
		"watch": "run-p ext:start src:start",
		"start": "run-s build watch"
	},
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.0.1",
		"@rollup/plugin-node-resolve": "^13.0.6",
		"chalk": "^5.0.0",
		"del": "^6.0.0",
		"detect-indent": "^7.0.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"gulp": "^4.0.2",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-env": "^0.4.0",
		"gulp-eslint": "^6.0.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-stylus": "^2.7.0",
		"inquirer": "^8.2.0",
		"npm-run-all": "^4.1.5",
		"open": "^8.4.0",
		"ora": "^6.0.1",
		"rollup": "^2.60.2",
		"rollup-plugin-svelte": "^7.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"semver": "^7.3.5",
		"simple-git": "^2.48.0",
		"svelte": "^3.44.2",
		"through2": "^4.0.2",
		"vinyl-source-stream": "^2.0.0",
		"web-ext": "^6.6.0",
		"webextension-polyfill": "^0.8.0"
	},
	"dependencies": {
		"sortablejs": "^1.14.0"
	},
	"webExt": {
		"sourceDir": "dist/",
		"ignoreFiles": [
			"package.json",
			"package-lock.json",
			"release.js",
			"gulpfile.js",
			"config-prod.json"
		]
	}
}
