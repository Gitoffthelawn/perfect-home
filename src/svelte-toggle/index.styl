@import "lib"

.toggle
	background transparent
	height 24
	width 71
	cursor ew-resize

	&:focus
		outline none

	&
	&::-moz-range-thumb
		-moz-appearance none
		appearance none
		border-radius 4px

	&::-moz-range-progress
	&::-moz-range-thumb
	&::-moz-range-track
		border-radius 4px

	&::-moz-range-thumb
		height 22
		width 22
		background var(--color-text)

	&::-moz-range-progress
		background-color  var(--color-highlight)
		height 100%

	&::-moz-range-track
		padding 1
		width 100%
		height 100%
		background-color var(--color-background)
		border 1px solid var(--color-background)

	&:focus::-moz-range-track
		box-shadow 0 0 2px 1px  var(--color-accent)
