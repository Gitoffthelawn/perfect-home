@import "lib"

.editor-contents
	display flex
	flex-flow row
	align-items stretch
	justify-content stretch
	min-width 600
	padding 0 10 10 0

	.thumb
		align-items center
		justify-content center
		margin-right 20


	.item-thumb
		width var(--icon-width)
		height var(--icon-height)
		display flex
		align-items center
		justify-content center
		background-color #333
		border-radius 10
		margin-bottom 10
		background #f9f9f9 linear-gradient(rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0.3)) center no-repeat
		background-size cover
		padding-top 10
		font 600 4em/1 helvetica, arial, sans-serif
		justify-content center
		align-items center
		color #555
		overflow hidden


	.thumbnail-label
		overflow hidden
		position relative
		button
			float right

	.details
		flex 1
		display flex
		flex-flow column
		align-items stretch
		justify-content flex-start

	label
		padding 0
		height initial

	input
	textarea
		margin-bottom 15


.modal .buttons
	display flex
	align-items center
	justify-content space-between
	border-top #111
	margin 10 0 -5
	padding-top 15

	.btn.success
		margin-left 10
