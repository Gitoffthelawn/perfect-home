@import "lib"

.btn-settings
	right 3
	top 6
	z-index 11

.btn-settings svg
	height 20
	width 20
	margin 3 0 0 -1




.settings-pane
	position absolute
	background-color #444
	top 0
	right 0
	bottom 0
	width 300
	padding 20
	min-height 300
	box-shadow -2px 0 5px #0008
	transition transform .1s, opacity .1s
	z-index 10
	overflow-y auto

	&.hidden
		transform translateX(300px)
		opacity 0

	h1
		margin-bottom 20


	label
		display block
		margin 0 0 5

	input
	textarea
	select
		padding 10
		margin 0
		font inherit
		border none
		min-width 0
		width 100%
		background-color #222
		color #eee

	select
		text-indent -2px

	textarea
		min-height 2.4em
		resize vertical
		flex unset

	input
		&[type="color"]
			-moz-appearance none
			background none
			border none
			height 35
			padding 0

		&[type=radio],
		&[type=checkbox]
			width auto
			margin-bottom 3
			margin-right 5
			transform scale(1.3)

	input + input
		margin 0 0 0 10


	button
		font-size 16px
		padding 10px 30px
		border-radius 5px
		transition background .2s
		border 1px solid #333
		background #eee
		width 100%

		&:focus
		&:hover
			background #c1c1c1

		&:active
			background: #424242


	.btn-clear
		border-color #A01
		color #A01

	.btn-clear:focus,
	.btn-clear:hover
		background #e0cccf

	.btn-clear:active
		background #432429

	hr
		margin 10 0 20
		height 0
		width 100%

.settings-form
	display flex
	flex-flow column
	align-items stretch
	padding 10 0
	font inherit
	font-size 15px


.settings-row
	display flex
	flex-flow row
	align-items center
	justify-content space-between
	margin-bottom 20

	label
		margin 0 5 0 0
	input
		width 70


.buttons-row
	margin-top 10
