header
	width 100%
	height 60px
	margin 20px auto 30px
	font-size 13px
	text-align center
	font-weight normal
	position relative
	display flex
	align-items center
	justify-content center
	max-width var(--grid-width)


@media (max-width 840px)
	header
		max-width 100%


header .title
	flex 1
	padding 2 0 0 0
	margin 0
	font-size 20px
	font-weight 400
	line-height 1
	opacity 0.3


.btn-back
	left 0

.btn-back svg
	height 16px
	width 16px
	margin 3px 0 0 -1px


.btn-settings
	right 3px
	 top 6px

.btn-settings svg
	height 20px
	 width 20px
	 margin 3px 0 0 -1px
