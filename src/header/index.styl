@import "lib"


header
	width 100%
	height 60px
	margin 20px auto 30px
	font-size 13px
	text-align center
	font-weight normal
	position relative
	display flex
	align-items center
	justify-content center
	max-width var(--grid-width)

	.title
		opacity .2

@media (max-width 840px)
	header
		max-width 100%


.btn-back
	left 0

.btn-back svg
	height 16px
	width 16px
	margin 3px 0 0 -1px
