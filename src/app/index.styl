@import "lib"


html, body
	margin 0
	padding 0
	height 100%
	width 100%
	overflow hidden

body
	font 13px sans-serif
	background var(--bg)
	color var(--color)
	-moz-user-select none
	user-select none
	box-sizing border-box
	padding-bottom 20px
	overflow-x hidden
	overflow-y auto

body *
	box-sizing inherit


h1, h2, h3, h4, h5, h6
	margin 0
	b 0

h1
	flex 1
	margin 0
	font-size 20px
	font-weight 600
	line-height 1

h2
	flex 1
	margin 0
	font-size 17px
	font-weight 400
	line-height 1
	text-align center


.ext-url
	width 100%
	margin-top 20
	font-size 14px !important
