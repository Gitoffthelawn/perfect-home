@import "lib"

.context-menu
	position absolute
	padding 5 0
	margin 0
	display flex
	flex-flow column
	align-items stretch
	list-style none
	z-index 20
	color dark-color-text3
	background dark-color-bg3
	box-shadow dark-shadow

	&.hidden
		display none

.context-menu-item
	padding 10 20
	position relative
	overflow hidden
	white-space nowrap

	input[type=file]
		position absolute
		left -500px

	&:hover
		background-color dark-color-highlight


.context-menu-separator
	height 0
	margin 5 0
	padding 0
	border-bottom dark-color-bg1
