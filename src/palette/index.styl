		color orange


.autocomplete-list-item-folder
	.autocomplete-list-item-icon
		background-color #fff
		mask-image url('assets/folder.svg')

	.autocomplete-list-item-text
		text-transform uppercase


.autocomplete-list-item-bookmark
	.autocomplete-list-item-icon
		background-color #fff
		mask-image url('assets/bookmark.svg')
