@import "lib"


.bookmarks
	.item
		margin auto
		display block
		text-align center
		text-decoration none
		color inherit
		border-radius 10px
		width var(--icon-width)
		height var(--icon-height)
		filter drop-shadow(0 3px 3px #0009)

	.item-title
		display block
		padding 0
		margin-top 10px
		max-height 2.3em
		overflow hidden
		text-overflow ellipsis

	.item-thumb
		width 100%
		height calc(100% - 22px)
		border-radius inherit

		background #f9f9f9 linear-gradient(rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0.3)) center no-repeat
		background-size cover
		display flex

		font 600 4em/1 helvetica, arial, sans-serif
		text-align center
		justify-content center
		align-items center
		color #555
		overflow hidden


	.item-folder .item-thumb
		background-color #ccc
		mask url('assets/folder.svg') center no-repeat
		mask-size cover

	.item-bookmark .item-thumb
		padding-top .25em


	.separator .item-thumb
		filter none
		background none




.sortable-plate
	.item-thumb
		background #333
		filter none

.sortable-ghost
	filter none

	.item-thumb
		filter grayscale(1) contrast(0) brightness(0.1)
		opacity 0.3

	.item-title
		display none



@media (max-width 1280px)
	.bookmarks .item
		width 100%
		height 100%

@media (max-width 960px)
	.bookmarks .item-thumb
		font-size 3em

@media (max-width 590px)
	.bookmarks .item-folder .item-thumb
		mask-size auto
