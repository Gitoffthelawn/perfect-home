
.item
	margin auto
	display block
	text-align center
	text-decoration none
	color inherit
	border-radius 10px
	width var(--icon-width)
	height var(--icon-height)


.item-title
	display block
	margin-top 10px
	padding 0
	overflow hidden
	justify-content center

	max-height 2.3em
	overflow hidden
	text-overflow ellipsis



.item-thumb
	display block
	width 100%
	height calc(100% - 22px)
	background-size cover
	background-repeat no-repeat
	background-position center
	border 1px solid var(--bg)
	border-radius inherit



.item-folder
	.item-thumb
		mask url('assets/folder.svg') center no-repeat
		mask-size cover
		background-color var(--color)
		opacity 0.8


.item-bookmark
	.item-thumb
		background-color #f9f9f9
		background-image linear-gradient(rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0.3))
		overflow hidden
		color #555
		text-align center
		display flex
		justify-content center
		align-items center
		padding-top .25em
		font-family helvetica, arial, sans-serif
		font-size calc(var(--icon-height) / 2)
		font-weight 600
		line-height 1



.sortable-plate
	background #000

.sortable-ghost
	filter grayscale(1) contrast(0) brightness(0.1)

	.item-title
		display none



@media (max-width 1090px)
	.item
		width 100%
		height 100%

@media (max-width 840px)
	.item-folder .item-thumb
		mask-size auto
