
.item
	width var(--icon-size)
	height var(--icon-size)
	margin auto
	display block
	text-align center
	text-decoration none
	color inherit
	border-radius 10px


.item-title
	display block
	margin-top 10px
	padding 0
	overflow hidden
	justify-content center

	max-height 2.3em
	overflow hidden
	text-overflow ellipsis



.item-thumb
	width var(--icon-size)
	height var(--icon-size)
	display block
	background-size cover
	background-repeat no-repeat
	background-position center
	border 1px solid var(--bg)
	border-radius inherit



.item-folder
	.item-thumb
		background-image url('assets/folder.svg')
		background-size 80%
		mask-size cover
		mask-repeat no-repeat
		mask-position center
		background-color var(--color)
		opacity 0.8


.item-bookmark
	.item-thumb
		background-color #f9f9f9
		background-image linear-gradient(rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0.3))
		overflow hidden
		color #555
		text-align center
		display flex
		justify-content center
		align-items center
		padding-top 15%
		font-family helvetica, arial, sans-serif
		font-size calc(var(--icon-size) - 25px)
		font-weight 600
		line-height 1




.sortable-chosen
	background #000

.sortable-ghost
	filter grayscale(1) contrast(0) brightness(0.1)

	.item-title
		display none
