@import "lib"

.modal-backdrop
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	display none
	align-items center
	justify-content center
	z-index 99
	background-color rgba(#000, 0)
	transition background-color .3s ease-out

	&.visible
		background-color rgba(#000, .6)

.modal
	background #222
	border-radius 3px
	margin-top -100
	opacity 0
	transform scale(0.8)
	transition opacity .3s ease-out, transform .3s ease-out
	color #eee
	box-shadow 0 2px 10px 2px #000a

	.visible &
		opacity 1
		transform scale(1)

	h1
		font-size 18px
		margin 0 0 10
		padding 12 20 10
		border-bottom #111

		&:empty
			display none

.modal-content
	padding 20
