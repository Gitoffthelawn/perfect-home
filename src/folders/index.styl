@import "lib"


.folders
	position absolute
	bottom 0
	left 0
	right 0
	padding 0 20
	display flex
	align-items flex-start
	justify-content flex-end
	height 0


.folder
	border-radius 10 10 0 0
	background-color #333
	box-shadow 0 0 4px 0 #000
	padding 0 0 15
	display flex
	flex-flow column
	margin-top -40
	margin-left 20
	transition margin .2s


.folder-titlebar
	display flex
	align-items center
	justify-content space-between
	padding 15 20 5
	cursor pointer
	color #888
	transition color .2s

	&:hover
		color #fff

.folder-title
	padding 0 20 0 0
	font-weight 600
	letter-spacing 1px


.folder-badge
	background linear-gradient(#888, #444)
	color #fff
	box-shadow 0 1px 1px 0px #000
	border-radius 25px
	padding 8 10 6
	margin -10 0 -6
	font-size 14px

	&:empty
		display none


.folder-empty
	color #888
	text-align center
	padding 30 0


.folder-item
	font inherit
	font-size 14px
	color inherit
	text-decoration none
	padding 7 20
	display flex
	align-items center

	&:hover
		text-decoration underline

	img
		size 16
		margin-right  10
		overflow hidden

	span
		flex 1
		white-space nowrap
		text-overflow ellipsis
		overflow hidden
		opacity 0.8
